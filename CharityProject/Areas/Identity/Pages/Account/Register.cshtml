@page
@model RegisterModel
<div class="login">
    <a asp-page="/Index">
        <img src="~/images/hero.png" alt="Alternate Text" />
    </a>
    <form method="post">
        <h1>REGISTER</h1>
        <div asp-validation-summary="ModelOnly" role="alert"></div>

        <div class="input-div">
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div class="input-div">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="input-div">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <p>
            Already have an account? <a class="login-page-btn" asp-page="Login">Login</a>
        </p>
        <div class="form-policy">
            <input type="checkbox"/>
            <p>I accept the terms and policies</p>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    </form>
</div>

