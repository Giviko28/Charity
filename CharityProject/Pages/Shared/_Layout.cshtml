<body>
    <div class="header-placeholder"></div>
    <header class="header-normal" id="header">
        <nav>
            <div class="nav-left">
                <div class="nav-search">
                    <i class="bi bi-search"></i>
                    <p>
                        Search
                    </p>
                </div>
                <div class="nav-donate">
                    <p>
                        Donate
                    </p>
                </div>
                <div class="nav-dropdown">
                    <p>
                        Fundraise
                        <span class="arrow"><i class="bi bi-caret-up"></i></span>
                    </p>
                    <ul class="dropdown">
                        <li>Animals</li>
                        <li>Elderly</li>
                        <li>Children</li>
                    </ul>
                </div>
            </div>
            <div class="nav-image">
                <a asp-page="/Index">
                    <img src="/images/navlogo.png" alt="Alternate Text" />
                </a>
            </div>
            <div class="nav-right">
            
                <partial name="_LoginPartial" />
                <a class="nav-button" accept-policy>Start a Ufund</a>
            </div>
        </nav>
    </header>
